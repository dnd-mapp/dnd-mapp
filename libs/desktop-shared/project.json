{
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "projectType": "library",
    "name": "@dnd-mapp/desktop-shared",
    "sourceRoot": "libs/shared/src",
    "tags": ["scope:shared", "scope:desktop-app"],
    "targets": {
        "test": {
            "executor": "nx:run-commands",
            "continuous": true,
            "defaultConfiguration": "ci",
            "configurations": {
                "ci": {
                    "command": "vitest run",
                    "env": {
                        "CI": "true"
                    }
                },
                "dev": {
                    "command": "vitest watch"
                }
            }
        }
    }
}
