{
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "name": "resources-server",
    "projectType": "application",
    "sourceRoot": "apps/resources-server/src",
    "tags": ["type:nest", "scope:server", "scope:resources"],
    "targets": {
        "prisma-generate-client": {
            "executor": "nx:run-commands",
            "cache": true,
            "inputs": ["{projectRoot}/.prisma/schema.prisma"],
            "outputs": ["{projectRoot}/.prisma/client"],
            "options": {
                "command": "npx prisma generate client",
                "args": ["--config apps/resources-server/prisma.config.ts"]
            }
        },
        "prisma-db-push": {
            "executor": "nx:run-commands",
            "inputs": ["{projectRoot}/.prisma/schema.prisma"],
            "options": {
                "command": "npx prisma db push",
                "args": ["--config apps/resources-server/prisma.config.ts"]
            }
        },
        "build": {
            "executor": "nx:run-commands",
            "options": {
                "command": "webpack-cli build",
                "cwd": "apps/resources-server"
            },
            "defaultConfiguration": "prod",
            "configurations": {
                "prod": {
                    "args": ["--node-env production"]
                },
                "dev": {
                    "args": ["--node-env development"]
                }
            }
        },
        "serve": {
            "executor": "@nx/js:node",
            "continuous": true,
            "dependsOn": ["build"],
            "options": {
                "buildTarget": "resources-server:build:dev",
                "host": "localhost.resources.dnd-mapp.dev",
                "inspect": false,
                "port": 4300,
                "runBuildTargetDependencies": false,
                "watch": true
            }
        },
        "test": {
            "options": {
                "jestConfig": "apps/resources-server/jest.config.ts"
            },
            "defaultConfiguration": "ci",
            "configurations": {
                "ci": {},
                "dev": {
                    "watchAll": true
                }
            }
        }
    }
}
