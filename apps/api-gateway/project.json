{
    "name": "@dnd-mapp/api-gateway",
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "sourceRoot": "apps/api-gateway/src",
    "projectType": "application",
    "tags": ["api:public", "framework:nest"],
    "targets": {
        "build": {
            "executor": "nx:run-commands",
            "cache": true,
            "inputs": [
                "{projectRoot}/**/*",
                "!{projectRoot}/tsconfig.spec.json",
                "!{projectRoot}/jest.config.ts",
                "!{projectRoot}/**/*.spec.ts",
                "!{projectRoot}/.spec.swcrc",
                "!{projectRoot}/dist/**/*",
                "!{projectRoot}/test/**/*",
                "!{projectRoot}/reports/**/*"
            ],
            "outputs": ["{workspaceRoot}/dist/{projectRoot}"],
            "options": {
                "command": "webpack-cli build"
            },
            "defaultConfiguration": "prod",
            "configurations": {
                "prod": {
                    "args": ["node-env=production"]
                },
                "dev": {
                    "args": ["node-env=development"]
                }
            }
        },
        "serve": {
            "executor": "@nx/js:node",
            "dependsOn": ["build"],
            "continuous": true,
            "options": {
                "inspect": false,
                "runBuildTargetDependencies": false
            },
            "defaultConfiguration": "dev",
            "configurations": {
                "prod": {
                    "buildTarget": "@dnd-mapp/api-gateway:build:prod"
                },
                "dev": {
                    "buildTarget": "@dnd-mapp/api-gateway:build:dev"
                }
            }
        },
        "test": {
            "executor": "@nx/jest:jest",
            "dependsOn": ["build"],
            "options": {
                "jestConfig": "apps/api-gateway/jest.config.ts",
                "passWithNoTests": true
            },
            "defaultConfiguration": "ci",
            "configurations": {
                "ci": {
                    "ci": true
                },
                "dev": {
                    "ci": false,
                    "watch": true
                }
            }
        }
    }
}
