{
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "name": "api-gateway",
    "sourceRoot": "apps/api-gateway/src",
    "projectType": "application",
    "tags": ["api:public", "framework:nest"],
    "targets": {
        "copy-proto-files": {
            "executor": "nx:run-commands",
            "inputs": [
                "{workspaceRoot}/libs/shared-api/src/assets/proto/*.proto",
                "{workspaceRoot}/tools/copy-proto-files.ts"
            ],
            "outputs": ["{projectRoot}/src/assets/proto/*.proto"],
            "cache": true,
            "options": {
                "command": "npx ts-node tools/copy-proto-files.ts --appPath apps/api-gateway"
            }
        },
        "build": {
            "executor": "nx:run-commands",
            "dependsOn": ["copy-proto-files"],
            "cache": true,
            "inputs": [
                "{projectRoot}/**/*",
                "!{projectRoot}/tsconfig.spec.json",
                "!{projectRoot}/jest.config.ts",
                "!{projectRoot}/**/*.spec.ts",
                "!{projectRoot}/.spec.swcrc",
                "!{projectRoot}/test/**/*"
            ],
            "outputs": ["{workspaceRoot}/dist/{projectRoot}"],
            "options": {
                "command": "webpack-cli build"
            },
            "defaultConfiguration": "prod",
            "configurations": {
                "prod": {
                    "args": ["--node-env production"]
                },
                "dev": {
                    "args": ["--node-env development"]
                }
            }
        },
        "serve": {
            "executor": "@nx/js:node",
            "dependsOn": ["build"],
            "continuous": true,
            "options": {
                "inspect": false,
                "runBuildTargetDependencies": false
            },
            "defaultConfiguration": "dev",
            "configurations": {
                "prod": {
                    "buildTarget": "api-gateway:build:prod"
                },
                "dev": {
                    "buildTarget": "api-gateway:build:dev"
                }
            }
        },
        "test": {
            "executor": "@nx/jest:jest",
            "dependsOn": ["build"],
            "options": {
                "jestConfig": "apps/api-gateway/jest.config.ts",
                "passWithNoTests": true
            },
            "defaultConfiguration": "ci",
            "configurations": {
                "ci": {
                    "ci": true
                },
                "dev": {
                    "ci": false,
                    "watch": true
                }
            }
        },
        "lint": {
            "executor": "@nx/eslint:lint",
            "options": {
                "eslintConfig": "apps/api-gateway/eslint.config.mjs"
            }
        }
    }
}
