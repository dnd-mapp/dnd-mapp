{
    "$schema": "../../../node_modules/nx-electron/src/validation/maker.schema.json",
    "appId": "org.eu.nl.dndmapp.desktop-app",
    "productName": "DnD Mapp",
    "artifactName": "${productName} ${version}.${ext}",
    "copyright": "Copyright Â© 2025 ${author}",
    "beforeBuild": "apps/desktop-app/build/before-build.mjs",
    "extraMetadata": {
        "name": "DnD Mapp",
        "description": "DnD Mapp",
        "version": "0.0.1",
        "author": {
            "name": "NoNamer777"
        }
    },
    "publish": {
        "provider": "github",
        "vPrefixedTagName": false
    },
    "win": {
        "icon": "dist/apps/desktop-app/assets/images/favicon/256x256.png",
        "target": "nsis"
    },
    "nsis": {
        "artifactName": "${productName} Setup ${version}.${ext}",
        "deleteAppDataOnUninstall": true,
        "displayLanguageSelector": true,
        "multiLanguageInstaller": true,
        "oneClick": false,
        "perMachine": true,
        "selectPerMachineByDefault": true
    }
}
