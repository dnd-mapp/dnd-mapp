{
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "name": "dnd-mapp",
    "projectType": "application",
    "sourceRoot": "apps/dnd-mapp/src",
    "prefix": "dma",
    "tags": ["framework:angular", "scope:client", "scope:ui"],
    "targets": {
        "build": {
            "executor": "@angular/build:application",
            "outputs": ["{options.outputPath}"],
            "options": {
                "assets": [
                    {
                        "glob": "**/*",
                        "input": "apps/dnd-mapp/public"
                    }
                ],
                "browser": "apps/dnd-mapp/src/main.ts",
                "inlineStyleLanguage": "scss",
                "outputPath": "dist/apps/dnd-mapp",
                "styles": ["apps/dnd-mapp/src/styles.scss"],
                "tsConfig": "apps/dnd-mapp/tsconfig.app.json"
            },
            "defaultConfiguration": "prod",
            "configurations": {
                "prod": {
                    "budgets": [
                        {
                            "type": "initial",
                            "maximumWarning": "500kb",
                            "maximumError": "1mb"
                        },
                        {
                            "type": "anyComponentStyle",
                            "maximumWarning": "4kb",
                            "maximumError": "8kb"
                        }
                    ]
                },
                "dev": {
                    "extractLicenses": false,
                    "namedChunks": true,
                    "optimization": false,
                    "sourceMap": true
                }
            }
        },
        "serve": {
            "executor": "@angular/build:dev-server",
            "continuous": true,
            "options": {
                "buildTarget": "dnd-mapp:build:dev",
                "host": "localhost.www.dnd-mapp.net",
                "port": 7300,
                "ssl": true,
                "sslKey": "certificate-key.pem",
                "sslCert": "certificate.pem"
            }
        },
        "lint": {
            "executor": "@nx/eslint:lint"
        }
    }
}
